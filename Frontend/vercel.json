{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "https://techiert.onrender.com/sitemap.xml"
    },
    {
      "source": "/robots.txt",
      "destination": "https://techiert.onrender.com/robots.txt"
    },
    {
      "source": "/((?!api/|_next/|assets/|.*\\..*).*)",
      "destination": "/index.html"
    }
  ]
}
